{
  "name": "minimal-dev",
  "version": "1.0.0",
  "keywords": [
    "minimal"
  ],
  "description": "Minimal development environment",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/fuz/minimal-dev"
  },
  "bugs": {
    "url": "https://gitlab.com/fuz/minimal-dev/issues"
  },
  "author": "Morten Lindhardt <r3fuze@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "xo && ava",
    "dev": "xo && ava --watch",
    "precommit": "xo && ava"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "chai": "^3.5.0",
    "concurrently": "^3.3.0",
    "cz-conventional-changelog": "^1.2.0",
    "git-pre-commit": "^2.1.3",
    "xo": "^0.17.1"
  },
  "xo": {
    "semicolon": false,
    "space": 4,
    "rules": {
      "quotes": [
        "error",
        "double"
      ],
      "spaced-comment": "off",
      "object-curly-spacing": "off",
      "ava/no-todo-test": "off"
    }
  },
  "dependencies": {},
  "pre-commit": [
    "xo",
    "ava"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
